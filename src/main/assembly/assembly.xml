<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>suits</directory>
            <outputDirectory>suits</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>data</directory>
            <outputDirectory>data</outputDirectory>
            <includes>
                <include>**/*.feature</include>
                <include>*.xlsx</include>
                <include>*.csv</include>
                <include>*.json</include>
                <include>*.xml</include>
                <include>*.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>scripts</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.bat</include>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>jmeter</directory>
            <outputDirectory>jmeter</outputDirectory>
            <includes>
                <include>*.csv</include>
                <include>*.jmx</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>soap</directory>
            <outputDirectory>soap-ui</outputDirectory>
            <includes>
                <include>*.csv</include>
                <include>*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>logs</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>cfg</outputDirectory>
            <includes>
                <include>*.properties</include>
            </includes>
            <excludes>
                <exclude>log4j2*.properties</exclude>
                <exclude>automation*.properties</exclude>
                <exclude>mobile*.properties</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>report</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>screenshots</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>src/main/resources/build/log4j2.bld.properties</source>
            <outputDirectory>cfg</outputDirectory>
            <destName>log4j2.properties</destName>
        </file>
        <file>
            <source>src/main/resources/build/automation.bld.properties</source>
            <outputDirectory>cfg</outputDirectory>
            <destName>automation.properties</destName>
        </file>
        <file>
            <source>src/main/resources/build/mobile.bld.properties</source>
            <outputDirectory>cfg</outputDirectory>
            <destName>mobile.properties</destName>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <useProjectAttachments>true</useProjectAttachments>
        </dependencySet>
    </dependencySets>
</assembly>